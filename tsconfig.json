{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist/",
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es2015.promise"
    ],
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "newLine": "LF"
  },
  "exclude": [
    "src/__test__",
    "src/lib/__test__",
    "node_modules"
  ]
}
